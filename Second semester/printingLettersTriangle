#include <iostream>;
using std::cin;
using std::cout;
using std::endl;


int main() {
    char ch;
    cout << "Enter capital letter: ";
    cin >> ch;

    int max = ch - 65;
    char a = 'A';

    for (int i = 0; i <= max; i++)
    {
        for (int j = 0; j < i; j++)
        {
            cout << char(a+j);
        }
        cout << endl;
    }

}
